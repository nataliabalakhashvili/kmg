@keyframes mymove
    0%
        display block
        width 0
        height 2px
        opacity 1
    50% 
        display block
        width 100%
        height 2px
        opacity 1
    90%
        display block
        height 100vh
        width 100%
        opacity 1
    100%
        display block
        height 100vh
        width 100%
        opacity 0
        display none
@keyframes transformAnimation
    from
        transform translateY(-10px)
        opacity 0
    to
        opacity 1
        transform translateY(0)

